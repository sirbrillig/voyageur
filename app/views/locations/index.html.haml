.content_locations
  .instructions
    %h1 Drag and Drop
    =image_tag('arrow_right.png')

  .library
    =link_to(image_tag('add_location_button.png'), new_location_path)
    %ul.library_locations
      - if @locations
        - @locations.each do |loc|
          %li.location
            %h1= loc.title
            %p= loc.address
            %nav.actions
              = link_to(image_tag('edit.png'), edit_location_path(loc))
              = link_to(image_tag('delete.png'), location_path(loc), :method => :delete)

  .trip
    .summary
      %h1 This Trip
      %h1= "#{@distance || 0} miles total"
      - if @trip
        =link_to(image_tag('clear_button.png'), "/trip/#{@trip.id}/clear")

    %ul.trip_locations
      - if @trip
        %li.distance 
          %h1 Start of the Journey
        - @trip.locations.each_with_index do |loc, index|
          %li.location
            %h1= loc.title
            %p= loc.address
            %nav.actions
              = link_to(image_tag('remove.png'), "/trip/#{@trip.id}/remove/#{loc.id}")
          - unless (index + 1) >= @trip.locations.size
            %li.distance
              %h1= "#{loc.distance_to(@trip.locations[index + 1])} miles to"
      %li.location.info
        %h1 Add a Location
